{
  "compilerOptions": {
    "outDir": "lib",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "esnext",
    "allowJs": false,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "lib": ["es2015", "es2017"],
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "Typings",
    "test",
    "coverage",
    "lib"
  ],
  "include": [
    "src/**/*.ts"
  ]
}