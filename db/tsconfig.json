{
  "compilerOptions": {
    "outFile": "./lib/index.js",
    "noImplicitAny": true,
    "module": "amd",
    "target": "esnext",
    "allowJs": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "lib": ["es2015", "es2017"]
  },
  "exclude": [
    "node_modules",
    "Typings",
    "test",
    "coverage",
    "lib"
  ],
  "include": [
    "src"
  ]
}